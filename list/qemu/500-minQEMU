# smpboot: CPU0: Intel 06/9e (family: 0x6, model: 0x9e, stepping: 0xd)
-e SMP
--set-val NR_CPUS 4

# MOTHER
-e rtc_class
-e DMI
-e ACPI
-m ACPI_BUTTON
-d acpi_ac
-d acpi_battery
-d acpi_fan
-d acpi_thermal

# BUS
-e pci
-e VIRTIO_menu
-e VIRTIO_pci

# 9p support
-e NET_9P
-e NET_9P_VIRTIO
-m 9P_FS
-e 9P_FS_POSIX_ACL

# GUEST under HYPERVISOR
-e HYPERVISOR_GUEST
-e PARAVIRT
-e PARAVIRT_SPINLOCKS
-e PARAVIRT_TIME_ACCOUNTING

# networking
-e POSIX_TIMERS
-m IPV6
-e net
-e inet
-e netdevices
-m VIRTIO_net
-e net_failover
-d wireless
-d wlan
-d usb_net_drivers
-d ethernet

# Input devices
-m input_mousedev
-m mouse_ps2
-m userio
-d serio_serport
-e input_tablet
