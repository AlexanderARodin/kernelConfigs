
config PCI
	bool "pci"
	default y
if PCI
	config LPC_ICH
		tristate "Intel ICH LPC"
		default y
	config I2C_I801
		tristate "Intel 82801 (ICH/PCH)"
		default y
endif #PCI

config BLOCK
	bool "Enable the BLOCK layer"
	default y

if BLOCK
	menu "disks"
		config ATA
			tristate "ATA"
			default y
			depends on BLOCK
		if ATA
			config SATA_AHCI
				tristate "SATA_AHCI"
				default y
				select SCSI
		endif #ATA
		
		config SCSI
			tristate "SCSI"
			default y
		if SCSI
			config BLK_DEV_SD
				tristate "BLK_DEV_SD"
				default y
			config BLK_DEV_SR
				tristate "BLK_DEV_SR"
				default y
			config CHR_DEV_SG
				bool "CHR_DEV_SG"
				default y
			config SCSI_VIRTIO
				tristate "SCSI_VIRTIO"
				default m
				#depends on VIRTIO
			config VIRTIO_BLK
				tristate "VIRTIO_BLK"
				default m
				#depends on VIRTIO
		endif #SCSI
	endmenu # discs
	
	menu "block FS"

		config EXT2_FS
			tristate "Ext2 support"
			default y
		config EXT4_FS
			tristate "Ext4 support"
			default m
			config EXT4_FS_POSIX_ACL
				bool "Ext4 POSIX Access Control Lists"
				default y
				depends on EXT4_FS

		comment "[ CD-ROM/DVD ]"
		config ISO9660_FS
			tristate "ISO 9660 CDROM file system support"
			default m
		if ISO9660_FS
			config JOLIET
				bool "Microsoft Joliet CDROM extensions"
				default y
				select NLS
			config ZISOFS
				bool "Transparent decompression extension"
				default y
		endif
		config UDF_FS
			tristate "UDF file system support"
			default m
			select NLS

		comment "[ Windows FATs ]"
		config VFAT_FS
			tristate "VFAT (Windows-95) fs support"
			default m
		if VFAT_FS
			config FAT_DEFAULT_IOCHARSET
				string "Default iocharset for FAT"
				default "ascii"
			config FAT_DEFAULT_UTF8
			 bool "Enable FAT UTF-8 option by default"
			 default y
		endif
		config EXFAT_FS
			tristate "exFAT filesystem support"
			default m
			select NLS
	endmenu
endif #BLOCK
	
